[Unit]
Description=Boiler Pi Controller
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/boiler-controller/pi-controller
Environment="PATH=/home/pi/boiler-controller/.venv/bin"
ExecStart=/home/pi/boiler-controller/.venv/bin/python main.py
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=boiler-pi

[Install]
WantedBy=multi-user.target
